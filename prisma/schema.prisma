generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  user_id   Int         @id @default(autoincrement())
  username  String      @db.VarChar(255)
  email     String      @unique @db.VarChar(255)
  password  String      @db.Text
  createdAt DateTime    @default(now()) @db.Timestamp(0)
  inventory inventory[]
  messages  Message[]

  @@index([email])
  @@index([username])
}

model Message {
  message_id Int      @id @default(autoincrement())
  content    String
  createdAt  DateTime @default(now())
  user_id    Int
  user       user     @relation(fields: [user_id], references: [user_id])

  @@index([user_id], map: "messages_user_id_fkey")
  @@map("messages")
}

model items {
  item_id     Int         @id @default(autoincrement())
  name        String      @db.VarChar(255)
  description String      @db.Text
  base_value  Decimal     @db.Decimal(10, 0)
  rarity      String      @db.Text
  inventory   inventory[]
}

model inventory {
  inv_id      Int      @id @default(autoincrement())
  user_id     Int
  item_id     Int
  quantity    Int      @default(0)
  obtained_at DateTime @default(now()) @db.Timestamp(0)
  user        user     @relation(fields: [user_id], references: [user_id], onUpdate: Restrict, map: "inventory_ibfk_1")
  items       items    @relation(fields: [item_id], references: [item_id], onUpdate: Restrict, map: "inventory_ibfk_2")

  @@index([item_id], map: "item_id")
  @@index([user_id], map: "user_id")
}
